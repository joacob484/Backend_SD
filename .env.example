# ==============================================
# FALTA UNO - Backend Configuration
# ==============================================

# ==============================================
# Base de Datos PostgreSQL
# ==============================================
DB_HOST=localhost
DB_PORT=5432
DB_NAME=faltauno
DB_USER=postgres
DB_PASSWORD=postgres

# ==============================================
# JWT Authentication
# ==============================================
# Clave secreta para firmar tokens JWT (mínimo 256 bits / 32 caracteres)
# Generar con: openssl rand -base64 32
JWT_SECRET=tu_clave_secreta_jwt_muy_larga_y_segura_minimo_256_bits_cambiame

# Tiempo de expiración del token en milisegundos (86400000 = 24 horas)
JWT_EXPIRATION=86400000

# ==============================================
# CORS Configuration
# ==============================================
# URL del frontend para permitir CORS
FRONTEND_URL=http://localhost:3000

# ==============================================
# OAuth2 - Google Login (Opcional)
# ==============================================
# Obtener credenciales en: https://console.cloud.google.com/
GOOGLE_CLIENT_ID=tu_google_client_id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=tu_google_client_secret

# ==============================================
# Spring Boot Configuration
# ==============================================
# Perfil de Spring (dev, prod)
SPRING_PROFILES_ACTIVE=dev

# Puerto del servidor
SERVER_PORT=8080

# ==============================================
# Logging
# ==============================================
# Nivel de logs (DEBUG, INFO, WARN, ERROR)
LOGGING_LEVEL_ROOT=INFO
LOGGING_LEVEL_APP=DEBUG
