# ======================================
# DATABASE CONFIGURATION (PostgreSQL)
# ======================================
SPRING_DATASOURCE_URL=jdbc:postgresql://postgres:5432/faltauno_db
SPRING_DATASOURCE_USERNAME=app
SPRING_DATASOURCE_PASSWORD=CHANGE_THIS_SECURE_PASSWORD

# ======================================
# REDIS CONFIGURATION
# ======================================
SPRING_REDIS_HOST=redis
SPRING_REDIS_PORT=6379

# ======================================
# RABBITMQ CONFIGURATION
# ======================================
SPRING_RABBITMQ_HOST=rabbitmq
SPRING_RABBITMQ_PORT=5672
SPRING_RABBITMQ_USERNAME=guest
SPRING_RABBITMQ_PASSWORD=guest

# ======================================
# JWT CONFIGURATION
# ======================================
# Generate with: openssl rand -base64 32
JWT_SECRET=CHANGE_THIS_TO_SECURE_RANDOM_STRING
JWT_EXPIRATION=86400000

# ======================================
# GOOGLE OAUTH CONFIGURATION
# ======================================
GOOGLE_CLIENT_ID=your-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-client-secret

# ======================================
# FRONTEND CONFIGURATION
# ======================================
FRONTEND_URL=https://your-frontend-url.run.app

# ======================================
# SPRING PROFILE
# ======================================
SPRING_PROFILES_ACTIVE=prod

# ======================================
# EMAIL CONFIGURATION (Optional)
# ======================================
# Uncomment and configure when ready to enable email notifications
# MAIL_HOST=smtp.gmail.com
# MAIL_PORT=587
# MAIL_USERNAME=your-email@gmail.com
# MAIL_PASSWORD=your-app-password-here
