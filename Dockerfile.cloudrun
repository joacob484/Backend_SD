# STAGE 2: RUNTIME - SOLO JRE
# â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€
FROM eclipse-temurin:21.0.5_11-jre

# Create non-root user for security
RUN groupadd -r spring && useradd -r -g spring spring

WORKDIR /app

# Copy JAR from builder stage
COPY --from=builder /build/target/*.jar app.jar

# Verify JAR was copied correctly
RUN echo "â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•" && \
    echo "ğŸ” VERIFYING RUNTIME IMAGE" && \
    echo "â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•" && \
    echo "" && \
    echo "Java version:" && \
    java -version && \
    echo "" && \
    echo "ğŸ“¦ Application JAR:" && \
    ls -lah /app/app.jar && \
    echo "" && \
    echo "ğŸ“Š JAR size: $(stat -c%s /app/app.jar 2>/dev/null || stat -f%z /app/app.jar) bytes" && \
    echo "" && \
    echo "ğŸ” JAR contents preview:" && \
    jar tf /app/app.jar | head -50 && \
    echo "" && \
    echo "âœ… Main-Class in MANIFEST.MF:" && \
    unzip -p /app/app.jar META-INF/MANIFEST.MF | grep Main-Class && \
    echo "â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•"

# Change ownership to spring user
RUN chown -R spring:spring /app

# Switch to non-root user
USER spring:spring

# Expose port
EXPOSE 8080

# Health check endpoint
HEALTHCHECK --interval=30s --timeout=5s --start-period=60s --retries=3 \
  CMD java -cp /app/app.jar org.springframework.boot.loader.launch.JarLauncher --spring.main.web-application-type=none || exit 1

# Run the application
# Use array form for proper signal handling
ENTRYPOINT ["java"]
CMD ["-Xms512m", "-Xmx1536m", \
     "-XX:+UseContainerSupport", \
     "-XX:MaxRAMPercentage=75.0", \
     "-Djava.security.egd=file:/dev/./urandom", \
     "-Dserver.port=8080", \
     "-jar", "/app/app.jar"]

